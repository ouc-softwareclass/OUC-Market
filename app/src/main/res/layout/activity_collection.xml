<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/collection_title"/>

    <!--收藏商品的信息-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/image1_view"
            android:layout_width="180dp"
            android:layout_height="190dp"
            android:src="@drawable/book1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/commodity1_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="软件工程导论"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description1_text"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="别问，卖卖卖卖......"
                android:textColor="#000000"
                android:textSize="24dp" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/price1_text"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="5元"
                    android:textColor="#ff0000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/delete1_item"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#ff0000"
                    android:textSize="30dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageView
        android:id="@+id/image2_view"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:src="@drawable/basketball" />

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:id="@+id/commodity2_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="篮球"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description2_text"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="九成新，走过路过千万别错过。"
            android:textColor="#000000"
            android:textSize="24dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/price2_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="50元"
                android:textColor="#ff0000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/delete2_item"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="删除"
                android:textColor="#ff0000"
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</LinearLayout>